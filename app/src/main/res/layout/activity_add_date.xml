<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".activities.AddDateActivity">

    <ImageView
        android:id="@+id/date_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/ic_date_title"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@id/date_title"
        android:layout_marginLeft="50dp"
        android:hint="@string/date_title"
        />

    <ImageView
        android:id="@+id/exact_date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_date"
        android:layout_below="@+id/date_title"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/date_title"/>

    <TextView
        android:id="@+id/picked_date"
        android:layout_width="100dp"
        android:layout_below="@id/et_title"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/exact_date"/>

    <Button
        android:id="@+id/choose_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_title"
        android:gravity="right"
        android:layout_toRightOf="@+id/picked_date"
        android:layout_centerInParent="true"
        android:onClick="showDatePicker"
        android:layout_marginTop="20dp"

        android:text="@string/select_date"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/add_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/exact_date"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/add"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/button_bg"
        />

</RelativeLayout>